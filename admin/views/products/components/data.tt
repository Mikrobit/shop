    <section class="data">
        <label>Weight (g)<br />
            <input  id="weight"
                    name="weight"
                    type="text"
                    title="Weight"
                    value="[% product.weight %]"
                    placeholder="100"
                    pattern="[0-9]+"
                    />
        </label>
    </section>
    <section class="data">
        <label>In stock<br />
            <input
                    name="stock"
                    type="text"
                    title="In stock"
                    value="[% product.stock %]"
                    placeholder="1"
                    pattern="[0-9]+"
                    required />
        </label>
    </section>
 </section> <!-- data -->

