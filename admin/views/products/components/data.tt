<section id="data">
    <h1>Data</h1>
    <section class="data">
        <label>Price &euro;<br />
        [% USE money = format("%.2f") -%]
            <input  id="price"
                    name="price"
                    type="text"
                    title="Price"
                    value="[% money(product.price) %]"
                    placeholder="1.23"
                    pattern="[0-9]+(\.|,)[0-9]+"
                    required />
        </label>
    </section>
